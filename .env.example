# FastAPI Enterprise - Environment Variables Example
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=FastAPI Enterprise
APP_VERSION=0.1.0
DEBUG=false
TESTING=false

# =============================================================================
# SERVER SETTINGS
# =============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# IMPORTANT: Generate a secure secret key for production!
# Run: python -c 'import secrets; print(secrets.token_urlsafe(32))'
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY

# =============================================================================
# DATABASE - POSTGRESQL (Primary Data Store)
# =============================================================================
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
POSTGRES_DB=fastapi_enterprise
POSTGRES_PORT=5432

# Alternative: Use complete DATABASE_URL (overrides individual settings above)
# DATABASE_URL=postgresql+asyncpg://user:password@host:port/database

# PostgreSQL Connection Pool Settings (optional, defaults shown)
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20
POSTGRES_POOL_TIMEOUT=30
POSTGRES_POOL_RECYCLE=3600

# =============================================================================
# DATABASE - MONGODB (Document Store)
# =============================================================================
MONGO_SERVER=localhost
MONGO_PORT=27017
MONGO_DB=fastapi_enterprise
MONGO_USER=your_mongo_user
MONGO_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
MONGODB_DATABASE=fastapi_enterprise

# Alternative: Use complete MONGODB_URL (overrides individual settings above)
# MONGODB_URL=mongodb://user:password@host:port

# =============================================================================
# DATABASE - REDIS (Caching and Session Store)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Alternative: Use complete REDIS_URL (overrides individual settings above)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# BACKGROUND TASKS - CELERY
# =============================================================================
# If not set, will default to REDIS_URL
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# CORS SETTINGS (Internal Service)
# =============================================================================
# Wildcard (*) is acceptable for internal services behind edge gateways
ALLOWED_HOSTS=*
ALLOW_CREDENTIALS=true
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# =============================================================================
# RATE LIMITING (Handled by Edge Services)
# =============================================================================
# These settings exist but rate limiting is handled at the edge
RATE_LIMIT_ENABLED=true
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# =============================================================================
# EMAIL SETTINGS (Optional)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-app-specific-password
# EMAIL_FROM=noreply@example.com

# =============================================================================
# EXTERNAL API SETTINGS
# =============================================================================
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_RETRIES=3
